# ==============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ==============================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ==============================================
# APPLICATION CONFIGURATION (REQUIRED)
# ==============================================
# Your production domain (e.g., https://signaturefor.me)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# LEMONSQUEEZY CONFIGURATION (REQUIRED FOR PAYMENTS)
# ==============================================
# Get these from: https://app.lemonsqueezy.com/settings/api
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# Server-side variant IDs (for webhook processing)
LEMONSQUEEZY_PREMIUM_VARIANT_ID=your_premium_variant_id
LEMONSQUEEZY_TEAM_VARIANT_ID=your_team_variant_id
LEMONSQUEEZY_AGENCY_VARIANT_ID=your_agency_variant_id

# Public variant IDs (for checkout links)
NEXT_PUBLIC_LEMONSQUEEZY_PREMIUM_VARIANT_ID=your_premium_variant_id
NEXT_PUBLIC_LEMONSQUEEZY_PREMIUM_YEARLY_VARIANT_ID=your_premium_yearly_variant_id
NEXT_PUBLIC_LEMONSQUEEZY_TEAM_VARIANT_ID=your_team_variant_id
NEXT_PUBLIC_LEMONSQUEEZY_TEAM_YEARLY_VARIANT_ID=your_team_yearly_variant_id
NEXT_PUBLIC_LEMONSQUEEZY_AGENCY_VARIANT_ID=your_agency_variant_id
NEXT_PUBLIC_LEMONSQUEEZY_AGENCY_YEARLY_VARIANT_ID=your_agency_yearly_variant_id

# ==============================================
# CLOUDFLARE IMAGES CONFIGURATION (OPTIONAL)
# ==============================================
# Get these from: https://dash.cloudflare.com/
# Only needed if using Cloudflare Images for image hosting
NEXT_PUBLIC_CLOUDFLARE_IMAGES_ACCOUNT_ID=your_cloudflare_account_id
NEXT_PUBLIC_CLOUDFLARE_IMAGES_API_TOKEN=your_cloudflare_api_token
NEXT_PUBLIC_CLOUDFLARE_IMAGES_ACCOUNT_HASH=your_cloudflare_account_hash
NEXT_PUBLIC_CLOUDFLARE_RESIZING_DOMAIN=your_cloudflare_resizing_domain
NEXT_PUBLIC_CLOUDFLARE_IMAGES_DELIVERY_URL=https://imagedelivery.net

# ==============================================
# GOOGLE ANALYTICS CONFIGURATION (OPTIONAL)
# ==============================================
# Get this from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==============================================
# N8N AI HELPER CONFIGURATION (OPTIONAL)
# ==============================================
# Your n8n webhook URL for AI suggestions
N8N_AI_HELPER_WEBHOOK_URL=your_n8n_webhook_url

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Automatically set by Next.js
# NODE_ENV=development
